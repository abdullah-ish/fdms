<body class="bg-light d-flex justify-content-center align-items-center vh-100">
  <div class="container"></br></br>
    <% if resource.errors.any? %>
      <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert" data-auto-dismiss="true">
        <strong>Oops!</strong> <%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:
        <ul class="mb-0">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %> 
    <div class="row justify-content-center">
      <div class="col-md-5 col-lg-4"> <!-- Reduced column size -->
        <h1 class="text-center text-primary mb-1" style="font-size: 1.8rem;">FDMS</h1>
        <p class="text-center mb-3" style="font-size: 0.9rem;">Financial Data Management System</p>
        <div class="card shadow p-3"> <!-- Reduced padding -->
          <h2 class="text-center mb-3 text-primary" style="font-size: 1.4rem;">Sign Up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="mb-2"> <!-- Reduced margin -->
              <%= f.label :email, class: "form-label", style: "font-size: 0.85rem;" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
            </div>

            <div class="mb-2">
              <%= f.label :name, class: "form-label", style: "font-size: 0.85rem;" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-sm" %>
            </div>

            <div class="mb-2">
              <%= f.label :password, class: "form-label", style: "font-size: 0.85rem;" %>
              <% if @minimum_password_length %>
                <em style="font-size: 0.75rem;">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
            </div>

            <div class="mb-2">
              <%= f.label :password_confirmation, class: "form-label", style: "font-size: 0.85rem;" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
            </div>

            <%= f.hidden_field :role, value: 'public_user' %>

            <div class="d-grid">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-sm" %> <!-- Smaller button -->
            </div>
          <% end %>

          <div class="text-center mt-2" style="font-size: 0.8rem;">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
